<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="serveur" name="Create Runnable Jar for Project Reseaux-MessengerApp">
    <!--this file was created by Eclipse Runnable JAR Export Wizard-->
    <!--ANT 1.7 is required                                        -->
    <target name="client">
        <jar destfile="jar/client.jar" filesetmanifest="mergewithoutmain">
            <manifest>
                <attribute name="Main-Class" value="client.Client"/>
                <attribute name="Class-Path" value="."/>
            </manifest>
            <fileset dir="bin"/>
        </jar>
    </target>
	<target name="serveur">
        <jar destfile="jar/serveur.jar" filesetmanifest="mergewithoutmain">
            <manifest>
                <attribute name="Main-Class" value="serveur.Serveur"/>
                <attribute name="Class-Path" value="."/>
            </manifest>
            <fileset dir="bin"/>
        	<zipfileset excludes="META-INF/*.SF" src="jar/jdom-2.0.5.jar"/>
        </jar>
    </target>
</project>


